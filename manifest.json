{
  "manifest_version": 2,
  "name": "Yet Another Jenkins Notifier",
  "description": "This extension notifies on Jenkins build.",
  "version": "1.0",
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html",
    "default_title": "Yet Another Jenkins Notifier"
  },
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "background": {
    "scripts": ["js/angular.min.js", "js/main.js", "js/background.js"]
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "permissions": [
    "<all_urls>",
    "storage",
    "notifications"
  ]
}